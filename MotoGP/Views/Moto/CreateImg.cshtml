 @model MotoGP.ViewModel.ImageMotoViewModel
@{
    ViewData["Title"] = "Thêm ảnh";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Thêm xe</h3>
    </div>
    <form asp-action="CreateImg" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="row ">
            <div class="card-body col-md-6">
                <div class="form-group">
                    <label for="HinhAnh">Hình ảnh</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" asp-for="HinhAnh" class="custom-file-input" id="imageInput">
                            <label asp-for="HinhAnh" class="custom-file-label" id="imageLabel">Choose file</label>
                        </div>
                        <div class="input-group-append">
                            <span class="input-group-text">Upload</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body col-md-6">
               
                <div class="form-group">
                    <label asp-for="IdMoTo" class="control-label"></label>
                    <select asp-for="IdMoTo" asp-items="@(new SelectList(ViewBag.MoTos, "Id", "TenXe"))" class="form-control">
                        <option value="">-- Chọn danh mục --</option>
                    </select>
                    <span asp-validation-for="IdMoTo" class="text-danger"></span>
                </div>
              

            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Thêm</button>
        </div>
    </form>
</div>

<script>
    document.getElementById('imageInput').addEventListener('change', function (event) {
        var fileName = event.target.files[0] ? event.target.files[0].name : 'Choose file';
        document.getElementById('imageLabel').innerText = fileName;
    });
</script>
