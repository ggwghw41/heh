@model MotoGP.ViewModel.NewsViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Thêm xe</h3>
    </div>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="row ">
            <div class="card-body col-md-6">
                <div class="form-group">
                    <label for="TieuDe">Tiêu đề</label>
                    <input type="text" asp-for="TieuDe" class="form-control" placeholder="Tên Xe">
                    <span asp-validation-for="TieuDe" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <textarea asp-for="NoiDung" id="editor"></textarea>
                </div>
            </div>
            <div class="card-body col-md-6">
                <div class="form-group">
                    <label for="HinhAnh">Hình ảnh</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" asp-for="HinhAnh" class="custom-file-input" id="imageInput">
                            <label asp-for="HinhAnh" class="custom-file-label" id="imageLabel">Choose file</label>
                        </div>
                        <div class="input-group-append">
                            <span class="input-group-text">Upload</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="NuocSanXuat">Nước sản xuất</label>
                    <div class="form-check">
                        <input type="checkbox" asp-for="HienThi" class="form-check-input">
                        <label class="form-check-label" for="HienThi">Hiện thị</label>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Thêm</button>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


<script>
    document.getElementById('imageInput').addEventListener('change', function (event) {
        var fileName = event.target.files[0] ? event.target.files[0].name : 'Choose file';
        document.getElementById('imageLabel').innerText = fileName;
    });
    // Initialize CKEditor
    CKEDITOR.replace('editor', {
        filebrowserBrowseUrl: '/ckfinder/ckfinder.html',
        filebrowserUploadUrl: '/ckfinder/core/connector/php/connector.php?command=QuickUpload&type=Files',
         allowedContent: 'p h1 h2 h3 blockquote strong em; a[!href]; img[!src,alt,width,height];',
        disallowedContent: 'style font'
    });
</script>

