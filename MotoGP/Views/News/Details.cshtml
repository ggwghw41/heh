@model MotoGP.ViewModel.NewsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Details</h1>

<div>
    <h4>News</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TieuDe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TieuDe)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HinhAnh)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content("~/images/" + Model.HinhAnh)" alt="News Image" style="width:200px; height:auto;" />
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NoiDung)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.NoiDung)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NgayDang)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgayDang)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HienThi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HienThi)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
