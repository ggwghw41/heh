@model MotoGP.Models.MotoImage
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Xoa Danh Muc</h3>
    </div>

    <div class="row ">
        <div class="card-body col-md-6">
           

            <div class="form-group">
                <label for="TenXe">Tên xe</label>
                <p>@Model.Moto.TenXe</p>
            </div>
        </div>
        <div class="card-body col-md-6">
            <div class="form-group">



                <p>Hình ảnh: <img src="~/images/@Model.HinhAnh" alt="Current Image" style="max-width: 200px; max-height: 200px;" /></p>

            </div>



        </div>
    </div>
    <form asp-action="DeleteImg" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Xóa</button>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>


