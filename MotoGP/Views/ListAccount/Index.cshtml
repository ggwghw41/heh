@model IEnumerable<MotoGP.ViewModel.ListRoleUser>
@{
    ViewData["Title"] = "ListAccount";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    <a class="btn btn-primary" asp-action="Add">Thêm Tài khoản</a>
</p>
<div class="card-body table-responsive p-0" style="height: 600px;">
    <table class="table table-head-fixed text-nowrap align-items-center text-center justify-content-center">
        <thead>
            <tr>
                <th>Tên tài khoản</th>
                <th>Email</th>
                <th>Quyền</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr class="bg-secondary text-bold justify-content-center align-items-center">
                    
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>
                       
                            @foreach (var role in user.Roles)
                            {
                                @role
                            }
                      
                    </td>
                    <td>
                        <a class="btn btn-success" asp-action="Edit" asp-route-id="@user.Id">Edit</a>

                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

